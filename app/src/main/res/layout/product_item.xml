<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin_half"
    >
    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_unknow_48dp"
        android:layout_alignParentLeft="true"
    />

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/img_picture"
        android:layout_toRightOf="@id/img_picture"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_name"
            />

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_name"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_code"
        android:layout_marginTop="@dimen/activity_horizontal_margin_half"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_name"
        android:layout_alignLeft="@+id/linear_name"
        android:layout_alignStart="@+id/linear_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_code"
            />

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_code"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_pdate"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_half"
        android:layout_above="@+id/linear_edate"
        android:layout_alignLeft="@+id/linear_name"
        android:layout_alignStart="@+id/linear_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_pdate"
            />

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:id="@+id/txt_pdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_pdate"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_edate"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_picture"
        android:layout_alignLeft="@+id/linear_name"
        android:layout_alignStart="@+id/linear_name">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_edate"
            />

        <TextView
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:id="@+id/txt_edate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_product_edate"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_alarm"
        android:id="@+id/img_alarm" />


</RelativeLayout>